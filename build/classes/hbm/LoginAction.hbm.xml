<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
		
		<hibernate-mapping>
		
			<class name="com.pojo.LoginActionPojo" table="USER_DETAILS">
			
				<id name="seq_no" column="SEQ_NO" type="java.lang.Integer">
					<generator class="increment"></generator>				
				</id>
			
				<property name="j_username" column="USERNAME" type="java.lang.String" ></property>
				<property name="j_password" column="PASSWORD" type="java.lang.String"></property>				
				<property name="empId" column="EMPID" type="java.lang.String"></property>				
				<property name="roleId" column="ROLE_ID" type="java.lang.Integer"></property>				
				
			</class>
		
		</hibernate-mapping>
